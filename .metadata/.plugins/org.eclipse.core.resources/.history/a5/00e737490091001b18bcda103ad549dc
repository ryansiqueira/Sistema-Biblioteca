package mjv.devschool.sistemalivaria.service;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import mjv.devschool.sistemalivaria.dto.CadastroDto;
import mjv.devschool.sistemalivaria.model.Cadastro;
import mjv.devschool.sistemalivaria.repositorie.CadastroRepository;

@Service
public class CadastroService {

	@Autowired
	private CadastroRepository cadRepository;

	
	@Transactional
	public CadastroDto insert(CadastroDto cadDto) {
		
		Cadastro entidade = new Cadastro();
		cpDtoParaEntidade(cadDto,entidade);
		entidade = cadRepository.save(entidade);
		return new CadastroDto(entidade);  

	}
	
	
	
	private void cpDtoParaEntidade(CadastroDto cadDto, Cadastro entidade ) {
		
		entidade.setNome(cadDto.getNome());
		entidade.setTelefone(cadDto.getTelefone());
		entidade.setEmail(cadDto.getEmail());
		entidade.setCpf(cadDto.getCpf());
		entidade.setLogin(cadDto.getLogin());
		entidade.setSenha(cadDto.getSenha());
		
		entidade.getEndereco().setCep(cadDto.getEnderecDto().getCep());
		entidade.getEndereco().setBairro(cadDto.getEnderecDto().getBairro());
		entidade.getEndereco().setIbge(cadDto.getEnderecDto().getIbge());
		entidade.getEndereco().setLocalidade(cadDto.getEnderecDto().getLocalidade());
		entidade.getEndereco().setLogradouro(cadDto.getEnderecDto().getLogradouro());
		entidade.getEndereco().setUf(cadDto.getEnderecDto().getUf());
		
		

	}

	
	
	
	
	
	
	
	
	
	
}

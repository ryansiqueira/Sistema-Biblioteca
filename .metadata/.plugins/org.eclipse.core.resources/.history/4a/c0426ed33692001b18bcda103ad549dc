package mjv.devschool.sistemalivaria.resource;

import java.net.URI;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.servlet.support.ServletUriComponentsBuilder;

import mjv.devschool.sistemalivaria.dto.CadastroDto;
import mjv.devschool.sistemalivaria.dto.EnderecoDto;
import mjv.devschool.sistemalivaria.service.CadastroService;


@RestController
@RequestMapping(value = "/cadastro")
public class CadastroResource {
	
	@Autowired
	private CadastroService cadservice;
	
	
	
	@GetMapping
	public ResponseEntity<CadastroDto> findAll(){
		CadastroDto dto = new CadastroDto();
		dto.setLogin("essemeulogin");
		dto.setSenha("123456");
		dto.setEnderecoDto(new EnderecoDto("bairro"));
		return ResponseEntity.ok().body(dto);
	}
	
	
	/*public ResponseEntity<List<CadastroDto>> findAll(){
	
		List<CadastroDto> list = cadservice.findAll();
	
		return ResponseEntity.ok().body(list);
	}
	*/
	
	
	@PostMapping
	public ResponseEntity<CadastroDto> insert(@RequestBody CadastroDto dto){
		
		
		dto = cadservice.insert(dto);
		
		
		URI uri = ServletUriComponentsBuilder.fromCurrentRequest().path("/{id}").buildAndExpand(dto.getId()).toUri();
		
		
		return ResponseEntity.created(uri).body(dto);

		
	}
	
	
}
